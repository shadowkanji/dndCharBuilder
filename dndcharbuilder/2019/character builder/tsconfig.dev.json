{
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "jsx": "react",
    "jsxFactory": "h",
    "allowJs": true
  },
  "include": [
    "src/*.ts",
    "src/*.tsx"
  ]
}
